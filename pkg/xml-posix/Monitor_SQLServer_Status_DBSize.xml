<?xml version="1.0" encoding="UTF-8"?>
<uptime xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.uptimesoftware.com/erdc/erdc erdc"
	xmlns="http://www.uptimesoftware.com/erdc/erdc"
	xmlns:upt="http://www.uptimesoftware.com/erdc/erdc" version="4.0" target_grouping="other">
    <class>SQL Server DB Status and Size</class>
	<exec>com.uptimesoftware.uptime.erdc.MonitorCustomScriptRunner</exec>
    <elements>
		<element name="process" parameter_type="input" data_type="string" gui_basic="1" range_type="0">
			<control_options> size:40 </control_options>
			<default_value>scripts/Monitor_SQLServer_Status_DBSize/sqldb_monitor.sh</default_value>
			<short_description>Script Name</short_description>
			<long_description>Name of the script/binary/process to be executed by up.time </long_description>
			<validation_rule><alphanumeric/></validation_rule>
			<error_message><alphanumeric>required field</alphanumeric></error_message>
			<gui_type><string/></gui_type>
		</element>
		
		<element name="username" parameter_type="input" data_type="string" gui_basic="1"
				range_type="0" units="">
            <control_options>size:40</control_options>
            <default_value/>
            <short_description>Windows Username</short_description>
            <long_description>Windows Username</long_description>
            <validation_rule><alphanumeric/></validation_rule>
            <error_message><alphanumeric>required field</alphanumeric></error_message>
            <gui_type>
                <string/>
            </gui_type>
        </element>
		<element name="password" parameter_type="input" data_type="string" gui_basic="1"
				range_type="0" units="">
            <control_options>size:40</control_options>
            <default_value/>
            <short_description>Windows Password</short_description>
            <long_description>Windows Password</long_description>
            <validation_rule><alphanumeric/></validation_rule>
            <error_message><alphanumeric>required field</alphanumeric></error_message>
            <gui_type>
                <password/>
            </gui_type>
        </element>
		<element name="sqlport" parameter_type="input" data_type="string" gui_basic="1"
				range_type="0" units="">
            <control_options>size:8</control_options>
            <default_value>1433</default_value>
            <short_description>SQL Instance Port</short_description>
            <long_description>SQL Instance Port</long_description>
            <validation_rule><alphanumeric/></validation_rule>
            <error_message><alphanumeric>required field</alphanumeric></error_message>
            <gui_type>
                <string/>
            </gui_type>
        </element>
		<element name="agentport" parameter_type="input" data_type="string" gui_basic="1"
				range_type="0" units="">
            <control_options>size:8</control_options>
            <default_value>9998</default_value>
            <short_description>up.time Agent Port</short_description>
            <long_description>up.time Agent Port</long_description>
            <validation_rule><alphanumeric/></validation_rule>
            <error_message><alphanumeric>required field</alphanumeric></error_message>
            <gui_type>
                <string/>
            </gui_type>
        </element>
		<element name="dbStatusCheck" parameter_type="input" data_type="boolean" gui_basic="1" range_type="0">
			<control_options></control_options>
			<default_value>true</default_value>
			<short_description>Database Status Check</short_description>
			<long_description>Alert if operational status changes</long_description>
			<validation_rule/>
			<error_message/>
			<gui_type>
				<boolean/>
			</gui_type>
		</element>
		<element name="dbFilterOption" parameter_type="input" data_type="string" gui_basic="1"
				range_type="0" units="">
            <control_options>size:8</control_options>
            <default_value>None</default_value>
            <short_description>Database Filter</short_description>
            <long_description>Database Filter</long_description>
            <validation_rule><alphanumeric/></validation_rule>
            <error_message><alphanumeric>required field</alphanumeric></error_message>
            <gui_type>
                <single_select type="dropdown">
                    <value>None</value>
                    <value>Include</value>
                    <value>Exclude</value>
                </single_select>
            </gui_type>
        </element>
		<element name="dbFilterString" parameter_type="input" data_type="string" gui_basic="1"
				range_type="0" units="">
            <control_options>size:40</control_options>
            <default_value/>
            <short_description>Database Filter String</short_description>
            <long_description>Database Filter String</long_description>
            <validation_rule/>
            <error_message/>
            <gui_type>
                <string/>
            </gui_type>
        </element>
		

		
		<element name="dbStatus" parameter_type="output" data_type="ranged" gui_basic="1" range_type="0" units="">
            <control_options>size:8</control_options>
            <default_value/>
            <short_description>Database Status</short_description>
            <long_description>Database Status</long_description>
            <validation_rule/>
            <error_message/>
            <gui_type>
				<decimal/>
            </gui_type>
        </element>		
		<element name="DBFreeSpaceMB" parameter_type="output" data_type="ranged" gui_basic="1" range_type="0" units="MB">
            <control_options>size:8</control_options>
            <default_value/>
            <short_description>Database Free Space (MB)</short_description>
            <long_description>Database Free Space (MB)</long_description>
            <validation_rule/>
            <error_message/>
            <gui_type>
				<decimal/>
            </gui_type>
        </element>
		<element name="DBFreeSpacePCT" parameter_type="output" data_type="ranged" gui_basic="1" range_type="0" units="pct">
            <control_options>size:8</control_options>
            <default_value/>
            <short_description>Database Free Space (pct)</short_description>
            <long_description>Database Free Space (pct)</long_description>
            <validation_rule/>
            <error_message/>
            <gui_type>
				<decimal/>
            </gui_type>
        </element>
		<element name="LogFileFreeSpaceMB" parameter_type="output" data_type="ranged" gui_basic="1" range_type="0" units="MB">
            <control_options>size:8</control_options>
            <default_value/>
            <short_description>Log Free Space (MB)</short_description>
            <long_description>Log Free Space (MB)</long_description>
            <validation_rule/>
            <error_message/>
            <gui_type>
				<decimal/>
            </gui_type>
        </element>
		<element name="LogFileFreeSpacePCT" parameter_type="output" data_type="ranged" gui_basic="1" range_type="0" units="pct">
            <control_options>size:8</control_options>
            <default_value/>
            <short_description>Log Free Space (pct)</short_description>
            <long_description>Log Free Space (pct)</long_description>
            <validation_rule/>
            <error_message/>
            <gui_type>
				<decimal/>
            </gui_type>
        </element>
		
        <element name="timer" parameter_type="output" data_type="integer" gui_basic="0"
				range_type="0" units="ms">
            <control_options>size:8</control_options>
            <default_value/>
            <short_description>Response time</short_description>
            <long_description>Response time in ms</long_description>
            <validation_rule/>
            <error_message/>
            <gui_type>
                <integer/>
            </gui_type>
        </element>
    </elements>
    <help>When running a custom script check, note that the second parameter is always the name of the assigned host.
	The script that's executed should output each variable on it's own line, otherwise up.time won't be able to capture the appropriate information.
    </help>
</uptime>